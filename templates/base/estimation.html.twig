{% extends 'base.html.twig' %}

{% block title %}Estimation d'un bien{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-B">Estimation de votre bien immobilier</h5>
            <form id="estimationForm">
                <div class="mb-3">
                    <label for="nombrePieces" class="form-label">Nombre de pièces</label>
                    <input type="number" class="form-control" id="nombrePieces" name="nombrePieces" required>
                </div>
                <div class="mb-3">
                    <label for="surface" class="form-label">Surface en m²</label>
                    <input type="number" class="form-control" id="surface" name="surface" required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="jardin" name="jardin">
                    <label class="form-check-label" for="jardin">Jardin</label>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="garage" name="garage">
                    <label class="form-check-label" for="garage">Garage</label>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="fibre" name="fibre">
                    <label class="form-check-label" for="fibre">Fibre optique</label>
                </div>
                <button type="submit" class="btn background-P text-W">Calculer l'estimation</button>
            </form>
        </div>
    </div>
</div>

<!-- Modal pour l'estimation -->
<div class="modal fade" id="estimationModal" tabindex="-1" aria-labelledby="estimationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="estimationModalLabel">Estimation du bien</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        L'estimation de votre bien est de <span id="estimationResult">0</span> €.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}
