{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Profil
{% endblock %}

{% block body %}
<div class="container-fluid background-P">
  <div class="row">
    <div class="col-md-5 pb-5 pt-4 mt-4 pe-5 text-center d-flex align-items-center">
      <!-- Contenu de la première colonne -->
      <p class="display-2 climatecrisis text-W">Profil</p>
    </div>
  </div>
</div>

	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-10 climatecrisis text-P">
				<ul>
					<p>Vos visites</p>
					{% for visite in visites %}
						<li>
							Visite à {{ visite.annonce.titre }} <br>le {{ visite.datetime|date('Y-m-d H:i') }}<br>
							{% if visite.agent %}
								- Agent: {{ visite.agent.nom }}<br><br>
							{% endif %}
							<form action="{{ path('visite_delete', {'id': visite.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette visite ?');">
								<input type="submit" value="Supprimer">
							</form>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}